rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para colecciones públicas (necesarias para el sitio de reservas)
    match /locales/{localId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    match /profesionales/{profesionalId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /servicios/{servicioId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /categorias_servicios/{categoriaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /empresa/{empresaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // El resto de las colecciones requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
