rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla de excepción: permite que cualquiera lea los datos de la empresa.
    match /empresa/{empresaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regla general: requiere autenticación para todo lo demás.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
