rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // PUBLIC READ: Allow public read access for logos and avatars
    match /empresa/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    match /receipt_logos/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    match /profesionales/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    match /productos/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // PUBLIC WRITE for WhatsApp media from webhooks
    match /whatsapp_media/{allPaths=**} {
      allow write;
      allow read: if request.auth != null;
    }

    // DEFAULT DENY: Deny read/write access to all other paths by default
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
