
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla global: Requiere autenticación para cualquier acceso
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Reglas específicas por colección
    
    // Colección de usuarios: cada usuario puede leer su propio perfil
    match /usuarios/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Colecciones públicas (servicios, profesionales, locales, categorías)
    match /servicios/{serviceId} {
      allow read: if true;
    }
    match /profesionales/{professionalId} {
      allow read: if true;
    }
    match /locales/{localId} {
      allow read: if true;
    }
    match /categorias_servicios/{categoryId} {
      allow read: if true;
    }
    match /categorias_productos/{categoryId} {
      allow read: if true;
    }
     match /marcas_productos/{brandId} {
      allow read: if true;
    }
    match /formatos_productos/{presentationId} {
      allow read: if true;
    }
    match /empresa/{empresaId} {
      allow read: if true;
    }

    // Colección de reservas: los usuarios autenticados pueden crear, y leer las suyas.
    match /reservas/{reservationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null; // Se podría restringir más, p.ej. if resource.data.cliente_id == request.auth.uid
    }
    
    // Bloqueos de horario: solo usuarios autenticados (internos)
    match /bloqueos_horario/{blockId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    // Clientes: Solo usuarios autenticados pueden operar
    match /clientes/{clientId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    // Ventas: Solo usuarios autenticados
    match /ventas/{ventaId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    // Egresos: Solo usuarios autenticados
    match /egresos/{egresoId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    match /ingresos_manuales/{ingresoId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    // Productos: Solo usuarios autenticados
    match /productos/{productoId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    // Configuración: Solo admins (ejemplo)
    match /configuracion/{configId} {
       allow read, write: if request.auth != null; // En un futuro: 'admin' in get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.roles
    }
    
    match /codigos_autorizacion/{codeId} {
       allow read, create, update, delete: if request.auth != null;
    }
    
    match /conversations/{conversationId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }
    
  }
}
