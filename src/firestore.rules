rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access only to the specific 'main' document in 'empresa'
    match /empresa/main {
      allow get: if true;
      allow list, write: if request.auth != null;
    }

    // Secure all other collections and documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
