rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // REGLAS PÚBLICAS: Necesarias para el sitio de agendamiento.
    // Cualquiera puede leer, solo los usuarios autenticados pueden escribir.
    match /locales/{localId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /profesionales/{profesionalId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /servicios/{servicioId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /categorias_servicios/{categoriaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // REGLAS PRIVADAS: Solo usuarios autenticados (tu equipo) pueden acceder.
    // Esto protege la información sensible de clientes, ventas, etc.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
