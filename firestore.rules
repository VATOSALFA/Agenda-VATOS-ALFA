rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla global: Permite el acceso de lectura y escritura a cualquier usuario autenticado.
    // Esto es adecuado para una aplicación interna donde la lógica de permisos se maneja en la aplicación.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
