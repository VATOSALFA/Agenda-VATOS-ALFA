rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authenticated users (staff, admin, etc.)
    function isSignedIn() {
      return request.auth != null;
    }

    // --- PUBLIC BOOKING FLOW ---
    // These collections need to be publicly readable for the client booking process.
    match /locales/{localId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /servicios/{serviceId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /profesionales/{professionalId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /categorias_servicios/{categoryId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /bloqueos_horario/{blockId} {
      allow read; // Public read is needed to check for available slots
      allow write: if isSignedIn();
    }

    // --- RESERVATIONS ---
    // Anyone can create a reservation (public booking flow).
    // Only signed-in users can read, update, or delete them.
    match /reservas/{reservationId} {
      allow create; // Allows public booking
      allow read, update, delete: if isSignedIn();
    }
    
    // --- CLIENTS ---
    // Anyone can create a client record during booking.
    // Only signed-in users can view or modify client data.
    match /clientes/{clienteId} {
       allow create;
       allow read, update, delete: if isSignedIn();
    }

    // --- CONVERSATIONS ---
    // The Twilio webhook writes here, so it must be public.
    // Only signed-in users can read the conversation history.
    match /conversations/{conversationId}/{message=**} {
      allow read: if isSignedIn();
      allow write;
    }

    // --- DEFAULT SECURE RULE ---
    // All other collections not specified above require authentication
    // for any type of access. This is a secure default.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
