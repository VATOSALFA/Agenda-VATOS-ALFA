rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Reglas para colecciones públicas (lectura para todos)
    match /servicios/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo autenticados pueden escribir
    }
    match /categorias_servicios/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /profesionales/{profesionalId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /locales/{localId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reglas para colecciones privadas (solo usuarios autenticados)
    match /clientes/{clientId} {
      allow read, write: if request.auth != null;
    }
    match /reservas/{reservationId} {
      allow read, write: if request.auth != null;
    }
    match /ventas/{saleId} {
      allow read, write: if request.auth != null;
    }
    match /egresos/{egresoId} {
      allow read, write: if request.auth != null;
    }
    match /ingresos_manuales/{ingresoId} {
      allow read, write: if request.auth != null;
    }
    match /cortes_caja/{corteId} {
      allow read, write: if request.auth != null;
    }
    match /bloqueos_horario/{blockId} {
      allow read, write: if request.auth != null;
    }
    match /productos/{productId} {
      allow read, write: if request.auth != null;
    }
    match /marcas_productos/{brandId} {
      allow read, write: if request.auth != null;
    }
    match /categorias_productos/{prodCategoryId} {
      allow read, write: if request.auth != null;
    }
    match /formatos_productos/{formatId} {
      allow read, write: if request.auth != null;
    }
    match /conversations/{conversationId}/{messageId=**} {
      allow read, write: if request.auth != null;
    }

    // Reglas para colecciones de configuración
    match /configuracion/{configId} {
      allow read: if true; // Permitir lectura pública para configuraciones como recordatorios
      allow write: if request.auth != null;
    }
    match /empresa/{empresaId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /codigos_autorizacion/{codeId} {
      allow read, write: if request.auth != null;
    }
    match /usuarios/{userId} {
      allow read, write: if request.auth != null;
    }
    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }
  }
}
