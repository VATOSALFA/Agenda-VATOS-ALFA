rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for media received from WhatsApp
    match /whatsapp_media/{allPaths=**} {
      // Allow public read access to anyone
      allow read;
      // Allow writes only for authenticated users (like our Cloud Function)
      allow write: if request.auth != null;
    }

    // Default secure rule for all other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
