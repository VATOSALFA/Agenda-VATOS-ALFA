rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Colecciones Públicas (Lectura libre, Escritura protegida)
    match /empresa/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /servicios/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /barberos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /profesionales/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /locales/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regla General: Todo lo demás requiere autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
