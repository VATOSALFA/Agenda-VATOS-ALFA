rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla para las imágenes de los profesionales
    match /profesionales/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para las imágenes de la empresa (logos)
    match /empresa/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Regla para logos en recibos
    match /receipt_logos/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    
    // Regla para las imágenes de los productos
    match /productos/{fileName} {
        allow read: if true;
        allow write: if request.auth != null && request.resource.size < 3 * 1024 * 1024;
    }

    // Regla para media de WhatsApp
    match /whatsapp_media/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Regla general más restrictiva como fallback.
    // Solo permite operaciones si no coincide con ninguna de las rutas más específicas de arriba.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
