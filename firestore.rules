rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite la lectura pública de la configuración de la empresa para evitar errores al cerrar sesión.
    match /empresa/{empresaId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }

    // Regla global: Requiere autenticación para todas las demás colecciones.
    // Esto es adecuado para una aplicación interna donde la lógica de permisos se maneja en la aplicación.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
