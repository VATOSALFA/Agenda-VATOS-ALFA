rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Make the 'empresa' collection publicy readable
    match /empresa/{empresaId} {
      allow get: if true;
      allow list, write: if request.auth != null;
    }

    // Secure all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
