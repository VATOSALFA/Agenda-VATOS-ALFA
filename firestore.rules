
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas por defecto: Nadie puede leer o escribir.
    // match /{document=**} {
    //   allow read, write: if false;
    // }

    // El sitio p√∫blico de agendamiento necesita leer estas colecciones.
    match /servicios/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categorias_servicios/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /profesionales/{professionalId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /locales/{localId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Los clientes pueden crear su propia reserva.
    match /reservas/{reservationId} {
      allow read: if request.auth != null;
      allow create: if true; // Permite que cualquiera cree una reserva
      allow update, delete: if request.auth != null;
    }

    // Los usuarios autenticados pueden gestionar el resto de los datos.
    match /clientes/{clientId} {
      allow read, write: if request.auth != null;
    }
    match /ventas/{saleId} {
      allow read, write: if request.auth != null;
    }
    match /egresos/{egresoId} {
      allow read, write: if request.auth != null;
    }
     match /ingresos_manuales/{ingresoId} {
      allow read, write: if request.auth != null;
    }
    match /bloqueos_horario/{blockId} {
      allow read, write: if request.auth != null;
    }
    match /productos/{productId} {
      allow read, write: if request.auth != null;
    }
    match /marcas_productos/{brandId} {
      allow read, write: if request.auth != null;
    }
    match /formatos_productos/{presentationId} {
      allow read, write: if request.auth != null;
    }
    match /categorias_productos/{categoryId} {
      allow read, write: if request.auth != null;
    }
    match /usuarios/{userId} {
      allow read, write: if request.auth != null;
    }
    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }
    match /codigos_autorizacion/{codeId} {
      allow read, write: if request.auth != null;
    }
    match /configuracion/{configId} {
      allow read, write: if request.auth != null;
    }
    match /conversations/{conversationId}/{messageId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
