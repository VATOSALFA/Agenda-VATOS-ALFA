
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas permisivas para colecciones públicas (lectura para todos)
    match /locales/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }

    match /profesionales/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /servicios/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /categorias_servicios/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Los clientes pueden crear reservas, pero solo los admins pueden ver todas.
    match /reservas/{document=**} {
      allow read: if request.auth != null; // Solo admins/staff pueden leer
      allow create: if true; // Cualquiera puede crear una reserva
      allow update, delete: if request.auth != null;
    }
    
    // Los clientes pueden crearse a si mismos.
    match /clientes/{document=**} {
        allow read, update, delete: if request.auth != null;
        allow create: if true;
    }

    // El resto de las colecciones son privadas por defecto y requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
