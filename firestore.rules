rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Public read-only for booking flow
    match /locales/{localId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /servicios/{serviceId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /profesionales/{professionalId} {
      allow read;
      allow write: if isSignedIn();
    }
    match /categorias_servicios/{categoryId} {
      allow read;
      allow write: if isSignedIn();
    }

    // Authenticated users can manage reservations and blocks
    match /reservas/{reservationId} {
      allow read, write: if isSignedIn();
    }
    match /bloqueos_horario/{blockId} {
      allow read, write: if isSignedIn();
    }

    // Conversations can be written to by anyone (for webhooks) but only read by signed-in users
    match /conversations/{conversationId}/{message=**} {
      allow read: if isSignedIn();
      allow write;
    }

    // All other collections require authentication
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
