
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla general para todos los archivos:
    // Solo permite la lectura y escritura si el usuario est√° autenticado.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.resource.size < 3 * 1024 * 1024;
    }
  }
}
