
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // FunciÃ³n para verificar si el usuario es un administrador
    function isAdmin() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role in ['Administrador general', 'Administrador local'];
    }

    // Los clientes pueden ver la informaciÃ³n pÃºblica necesaria para reservar
    match /servicios/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /profesionales/{professionalId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /locales/{localId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /categorias_servicios/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Los usuarios solo pueden leer/escribir su propio documento de usuario
    match /usuarios/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    // Cualquiera puede crear una reserva (agendar una cita)
    // Solo el dueÃ±o de la reserva o un admin pueden leerla o actualizarla (ej. cancelarla)
    match /reservas/{reservationId} {
      allow create: if true;
      allow read, update: if request.auth.uid == resource.data.cliente_id || isAdmin();
      allow delete: if isAdmin();
    }

    // Los clientes pueden leer su propio documento, los admins pueden hacer todo
    match /clientes/{clientId} {
       allow read, update: if request.auth.uid == clientId || isAdmin();
       allow create: if request.auth != null;
       allow delete: if isAdmin();
    }
    
    // Las ventas solo pueden ser creadas por usuarios autenticados (cajeros, admins)
    // y solo leÃ­das por admins.
    match /ventas/{saleId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
    
    // Reglas para colecciones de configuraciÃ³n (mÃ¡s restrictivas)
    match /whatsapp_configuraciones/{configId} {
      allow read, write: if isAdmin();
    }
    match /codigos_autorizacion/{codeId} {
      allow read, write: if isAdmin();
    }
    match /roles/{roleId} {
        allow read, write: if isAdmin();
    }

    // Por defecto, nadie puede acceder al resto de las colecciones.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
